<Window x:Class="SpringBootInstaller.Windows.CompleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설치 완료"
        Width="800" Height="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource PrimaryBg}"
        Icon="/icon/detail_orenge_logo.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 메인 콘텐츠 -->
        <Border Grid.Row="0" Background="{StaticResource CardBg}" Margin="15">
            <StackPanel Margin="25,15">
                    <!-- 성공 아이콘 -->
                    <TextBlock Text="✓"
                               FontSize="50"
                               Foreground="{StaticResource AccentGreen}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"/>

                    <TextBlock Text="설치 완료!"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource HeaderText}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    <!-- 성공 메시지 -->
                    <Border Background="#ECFDF5"
                            BorderBrush="#0D9668"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,0,15">
                        <TextBlock Text="모든 구성 요소가 성공적으로 설치되었습니다."
                                   FontSize="15"
                                   Foreground="#065F46"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- 설치 정보 -->
                    <TextBlock Text="설치된 항목:"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BodyText}"
                               Margin="0,0,0,10"/>

                    <Border Background="#F9FAFB"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock FontSize="14" Foreground="{StaticResource BodyText}" Margin="0,5">
                                <Run Text="• " FontWeight="Bold"/>
                                <Run Text="OpenJDK 17 "/>
                                <Run Text="(C:\java)" Foreground="{StaticResource MutedText}"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="{StaticResource BodyText}" Margin="0,5">
                                <Run Text="• " FontWeight="Bold"/>
                                <Run Text="SQL Server 2022 Developer Edition"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="{StaticResource BodyText}" Margin="0,5">
                                <Run Text="• " FontWeight="Bold"/>
                                <Run Text="데이터베이스 초기화 완료"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="{StaticResource BodyText}" Margin="0,5">
                                <Run Text="• " FontWeight="Bold"/>
                                <Run Text="바탕화면 바로가기 생성"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- 접속 정보 -->
                    <TextBlock Text="설치 정보:"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BodyText}"
                               Margin="0,0,0,10"/>

                    <Border Background="#EFF6FF"
                            BorderBrush="#3B82F6"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="15">
                        <StackPanel>
                            <TextBlock FontSize="14" Margin="0,5">
                                <Run Text="Java 경로: " FontWeight="SemiBold" Foreground="{StaticResource BodyText}"/>
                                <Run Text="C:\java" Foreground="{StaticResource MutedText}"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Margin="0,5">
                                <Run Text="JAVA_HOME: " FontWeight="SemiBold" Foreground="{StaticResource BodyText}"/>
                                <Run Text="C:\java" Foreground="{StaticResource MutedText}"/>
                            </TextBlock>

                            <Border Height="1" Background="#D1D5DB" Margin="0,10,0,10"/>

                            <TextBlock FontSize="14" Margin="0,5">
                                <Run Text="SQL Server: " FontWeight="SemiBold" Foreground="{StaticResource BodyText}"/>
                                <Run x:Name="SqlServerText" Foreground="{StaticResource MutedText}"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Margin="0,5">
                                <Run Text="DB 사용자 계정: " FontWeight="SemiBold" Foreground="{StaticResource BodyText}"/>
                                <Run x:Name="AppUserIdText" Foreground="{StaticResource MutedText}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
        </Border>

        <!-- 하단 버튼 -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="프로그램 실행"
                        Click="LaunchButton_Click"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,10,0"/>
                <Button Content="종료"
                        Click="CloseButton_Click"
                        Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
